<div class="my-3 text-center">
  <h2 class="text-light">Success! Please use this link:</h2>
    <h4><a href="./{{ shortenedUrl }}" class="text-decoration-none" id="shortenedUrl">http://localhost:{{ port }}/{{ shortenedUrl }}</a></h3>
    <button class="btn btn-primary" onclick="copyText()">複製</button>
</div>

<script>
  const copiedText = document.querySelector('#shortenedUrl')
  function copyText() {
    navigator.clipboard.writeText(copiedText.innerText)
      .then(() => alert('複製完成'))
      .catch(error => console.log(error))
  }
</script>